{% extends "base.njk" %}
{% block content %}
    <section class="site-blog-header">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h1>{{title}}</h1>
            <p>
              {{des}}
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="site-project" id="project">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>{{episode.subTitle}}</h2>
              <p>{{episode.title}}</p>
            </div>
          </div>
          {% for episode in collections.announcement | reverse %}
          <div class="col-lg-6 col-md-10 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-thumb">
                <img src="{{episode.data.img}}" alt="project-thumb">
              </div>
              <div class="site-project-item-content">
                <span>{{episode.data.subTitle}}</span>
                <h3><a href="{{episode.url}}">{{episode.data.title}}</a></h3>
                <a href="{{episode.data.page.url}}" class="read-more">{{episode.data.linkText}}</a>
              </div>
            </div>
          </div>
    </section>
          {% endfor %}
{% endblock %}
