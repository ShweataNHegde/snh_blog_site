{% extends "base.njk" %}
{% block content %}
    <section class="site-blog-header">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h1>{{title}}</h1>
            <p>
              {{des}}
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="site-project" id="project">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>{{question.subTitle}}</h2>
              <p>{{question.title}}</p>
            </div>
          </div>
          {% for question in questions| reverse %}
          <div class="col-lg-6 col-md-10 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-content">
                <span>{{question.data.subTitle}}</span>
                <h3><a href="{{question.url}}">{{question.data.title}}</a></h3>
                <a href="{{question.data.page.url}}" class="read-more">{{question.data.linkText}}</a>
              </div>
            </div>
          </div>
    </section>
          {% endfor %}
{% endblock %}
